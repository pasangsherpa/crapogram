<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">

            <stroke android:width="0.2dip" android:color="@color/light_grey" />

            <gradient android:angle="-90" android:endColor="@color/light_green" android:startColor="@color/light_green" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="@color/dark_grey" />

            <solid android:color="@color/light_grey" />
        </shape></item>
    <item><shape android:shape="rectangle">

            <stroke android:width="0.1dip" android:color="@color/light_grey" />

            <gradient android:angle="-90" android:endColor="@color/green" android:startColor="@color/green" />
        </shape></item>

</selector>